---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro'
import { CountryGrid } from '../components/CountryGrid'

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<Layout title="Countries Explorer | Discover the World">
	<section>
		<div class="mb-8">
			<h2 class="text-2xl font-bold text-foreground">Explore Countries Around the World</h2>
			<p class="text-muted-foreground">Discover information about countries, their flags, populations, and more.</p>
		</div>
		
		<CountryGrid client:load />
	</section>
</Layout>
